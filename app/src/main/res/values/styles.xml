<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorInActive</item>
        <item name="colorControlActivated">@color/colorIdentity</item>
        <item name="colorControlHighlight">@color/colorIdentity</item>
    </style>

    <style name="FullImageFloatingButton" parent="Widget.Design.FloatingActionButton">
        <item name="fabSize">normal</item>
        <item name="maxImageSize">56dp</item>
    </style>

    <style name="MaterialAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorIntro</item>
        <item name="colorPrimaryDark">@color/colorIntroDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Hello">
        <item name="android:textSize">
            28sp
        </item>
        <item name="android:textColor">
            #002E3F
        </item>
    </style>

    <style name="TextStyleToJoin">
        <item name="android:textSize">
            20sp
        </item>
        <item name="android:textColor">
            #002E3F
        </item>
    </style>

    <!-- styles.xml -->
    <style name="CheckJoinTermsTextStyle">
        <item name="android:textSize">
            10sp
        </item>
        <item name="android:textColor">
            #002E3F
        </item>
    </style>

</resources>
