<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

<!-- R.values.style 에 기본 바텀시트 다이얼로그 모달창 적용-->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_white_radius_8dp</item>
    </style>
<!-- R.values.style 에 기본 바텀시트 다이얼로그 모달창 적용 완료!!!-->

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorInActive</item>
        <item name="colorControlActivated">@color/colorIdentity</item>
        <item name="colorControlHighlight">@color/colorIdentity</item>
    </style>

    <style name="FullImageFloatingButton" parent="Widget.Design.FloatingActionButton">
        <item name="fabSize">normal</item>
        <item name="maxImageSize">56dp</item>
    </style>

    <style name="MaterialAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorIntro</item>
        <item name="colorPrimaryDark">@color/colorIntroDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Hello">
        <item name="android:textSize">
            28sp
        </item>
        <item name="android:textColor">
            #002E3F
        </item>
    </style>

    <style name="TextStyleToJoin">
        <item name="android:textSize">
            20sp
        </item>
        <item name="android:textColor">
            #002E3F
        </item>
    </style>

    <!-- styles.xml -->
    <style name="CheckJoinTermsTextStyle">
        <item name="android:textSize">
            10sp
        </item>
        <item name="android:textColor">
            #002E3F
        </item>
    </style>

    <!-- ImageView Corner  -->
    <style name="round_imageview">
        <item name="cornerFamily">
            rounded
        </item>
        <item name="cornerSize">
            20dp
        </item>
        <item name="color">
            #ffffff
        </item>
    </style>


</resources>
